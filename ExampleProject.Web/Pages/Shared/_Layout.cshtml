<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ExampleProject.Web</title>
    
    <environment include="Development">
        <link rel="stylesheet" href="~/dist/components.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/components.css" asp-append-version="true"/>
    </environment>

    @await RenderSectionAsync("Head", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">ExampleProject.Web</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - envisia GmbH
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
<environment include="Development">
    <script type="application/javascript" src="~/dist/ssr/runtime.js"></script>
    <script type="application/javascript" src="~/dist/ssr/vendor.js"></script>
    <script type="application/javascript" src="~/dist/components.js"></script>
</environment>
<environment exclude="Development">
    <script type="application/javascript" src="~/dist/components.js" asp-append-version="true"></script>
</environment>
<react-net-init-module></react-net-init-module>
</body>
</html>